<div class="container">
  <div class="row">
    <%= render 'books/list', new_book: @new_book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            </tr>
          </thead>

          <tbody>
            <% @user.each do |user| %>
            <tr>
            <td><%= attachment_image_tag user, :profile_image_id, :fill, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
            <% end %>
            </tr>
          </tbody>
          </table>
    </div>
  </div>
</div>