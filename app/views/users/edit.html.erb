<div class="container">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
  	<div class="text-danger" >
      <% if @user.errors.any? %>
      <ul>
        <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
    </div>
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class:"form-control name" %>
      </div>

      <div class="form-group">
        <label>Image</label>
        <%= f.attachment_field :profile_image, class:"form-control-file user_image" %>
      </div>

      <div class="form-group">
        <label>Introduction</label>
        <%= f.text_area :introduction, class:"form-control name" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update User', class:"btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>