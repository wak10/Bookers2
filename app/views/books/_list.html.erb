
    <div class="col-md-3">
      <%= notice %>
      <h2>User info</h2>
        <table class="table">
          <tbody>
          <tr><%= attachment_image_tag user, :profile_image, :fill, size:"100x100", format: 'jpeg', fallback: "no_image.jpg" %></tr>
          <tr>
            <th>name</th>
	          <th><%= user.name %></th>
          </tr>
          <tr>
	          <th>introduction</th>
	          <th></th>
          </tr>
          </tbody>
        </table>

        <div class="row">
        <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
        </div>

        <%= form_with model:new_book, url:'/books', local:true do |f| %>
          <h2 class="mt-3">New book</h2>
          <div class="form-group">
            <h4>Title</h4>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <h4>Opinion</h4>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <p><%= f.submit 'Create Book', class:"btn btn-success" %></p>
          </div>
          <% end %>
    </div>
