
<div class="container">
  <div class="row">
    <%= render 'books/list', new_book: @new_book, user: @book.user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image_id, :fill, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %>
              <nav><%= link_to @book.user.name, user_path(@book.user.id)  %></nav>
            </td>

    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to"Edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
    <td><%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "削除しますか？"} %></td>
    <% end %>
    </tr>
          </tbody>
          </table>
    </div>
  </div>
</div>




