
<div class="container">
  <div class="row">
    <%= render 'books/list', new_book: @new_book, user: @book.user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
            <td>
                <%= link_to @book.user.name, user_path(@book.user.id)  %>
                <%= attachment_image_tag @user, :profile_image_id, :fill, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id)  %></td>
            <td><%= @book.body %></td>
            <td>
                <%= link_to edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book_26842" do %>
                  <p>Edit</p>
                <% end %>
            </td>
            <td>
                <%= link_to book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger destroy_book_26842" do %>
                  <p>Destroy</p>
                <% end %>
            </td>
            </tr>
          </tbody>
          </table>
    </div>
  </div>
</div>