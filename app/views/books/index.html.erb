<div class="container">
  <div class="row">
    <%= render 'books/list', new_book: @new_book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @book.each do |book| %>
            <tr>
            <td><%= attachment_image_tag @user, :profile_image_id, :fill, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, book_path(book.id)  %></td>
            <td><%= book.body %></td>
            <% end %>
            </tr>
          </tbody>
          </table>
    </div>
  </div>
</div>